{% extends "layout.njk" %}
{% block body %}
<!-- INDUSTRIES-SECTION -->
<div class="industries-wrap">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h2>Built for Your Industry,<br> Customized for You</h2>
                </div>
                <div class="section-content">
                    <p>Duroair engineers industrial air filtration, ISO clean rooms, and other controlled, clean air environments to meet your industryâ€™s niche specifications for compliance and safety while protecting sensitive processes from contamination.</p>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="industries-in">
                    <!-- TAB-SLIDER -->
                    <ul class="nav nav-pills tab-slider" id="pills-tab" role="tablist">
                        {%- for industry in industries -%}
                        <div>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link {% if loop.first %} active {% endif %}" id="pills-{{ loop.index }}-tab"
                                    data-bs-toggle="pill" data-bs-target="#pills-{{ loop.index }}" type="button"
                                    role="tab" aria-controls="pills-{{ loop.index }}" 
                                    aria-selected="{{ 'true' if loop.first else 'false' }}">
                                    {{ industry.title }}
                                </button>
                            </li>
                        </div>
                        {%- endfor -%}
                    </ul>
                    <!-- TAB-SLIDER -->

                    <!-- TAB-GRID -->
                    <div class="tab-content" id="pills-tabContent">
                        {%- for industry in industries -%}
                        <div class="tab-pane fade {% if loop.first %} show active {% endif %}" id="pills-{{ loop.index }}"
                            role="tabpanel" aria-labelledby="pills-{{ loop.index }}-tab" tabindex="0">
                            <div class="industries-grid">
                                <div class="industries-grid-left">
                                    <div class="industries-grid-box">
                                        <div class="industries-grid-text">
                                            <h2>{{ industry.title }}</h2>
                                            <p>{{ industry.short_description }}</p>
                                            <a href="{{ industry.path }}" class="button">Explore Now<span class="button__spotlight"></span></a>
                                        </div>
                                        <img src="{{ industry.thumbnail }}" alt="{{ industry.title }}">
                                    </div>
                                </div>
                                <div class="industries-grid-right">
                                    {%- if industry.image_1 -%}
                                    <div class="industries-grid-box">
                                        <div class="industries-grid-text">
                                            <h2>{{ industry.text_1 }}</h2>
                                        </div>
                                        <img src="{{ industry.image_1 }}" alt="{{ industry.text_1 }}">
                                    </div>
                                    {%- endif -%}

                                    {%- if industry.image_2 -%}
                                    <div class="industries-grid-box">
                                        <div class="industries-grid-text">
                                            <h2>{{ industry.text_2 }}</h2>
                                        </div>
                                        <img src="{{ industry.image_2 }}" alt="{{ industry.text_2 }}">
                                    </div>
                                    {%- endif -%}

                                    {%- if industry.image_3 -%}
                                    <div class="industries-grid-box">
                                        <div class="industries-grid-text">
                                            <h2>{{ industry.text_3 }}</h2>
                                        </div>
                                        <img src="{{ industry.image_3 }}" alt="{{ industry.text_3 }}">
                                    </div>
                                    {%- endif -%}
                                </div>
                            </div>
                        </div>
                        {%- endfor -%}
                    </div>
                    <!-- TAB-GRID -->
                </div>
            </div>
        </div>
    </div>
</div>
<!-- INDUSTRIES-SECTION -->



<!-- WHY-CHOOSE-DUROAIR-SECTION -->
    
        <div class="why-choose-duroair pb-170">
            <div class="container">
