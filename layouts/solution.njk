{% extends "layout.njk" %}
{% set waveType = 'gray' %}
{%- set ctaButton = '<a href="#contact-us-form" class="btn">Contact Us</a>' -%}
{%- set cta = {
        headline : 'Clean Air Compliance Doesnâ€™t Have to be a Hassle',
        copy: 'Learn how portable, retractable industrial clean air systems meet the most stringent compliance requirements while improving your bottom line.',
        label: 'Download Now',
        url: '/resources/whitepapers/industrial-air-filtration-compliance/'
    }
 -%}
{% block body %}

<!-- End Of Inner Banner Section -->

    <div class="understand-sec cmn-gap painting-coating-pg">
        <div class="container">
            <div class="understand-inr has-texture">
                <div class="texture texture-type-1"><img src="/img/curve-texture.png" alt="Texture"></div>
                <div class="sec-inr-head">
                    <h2>{{intro.intro_head}}</h2>
                </div>
                <div class="row">
                    <div class="col-lg-8">
                        <div class="understand-left">
                            <div class="understandleft-img">
                                <img src="{{image_2}}" alt="Image">
                            </div>
                            {{intro.intro_desc | md }}
                            <a href="#contact-us-form" class="cmn-btn button"><span class="button__spotlight"></span>Contact Us</a>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="understand-right">
                            <div class="blob1"></div>
                            <div class="undrstnd-rt-img"><img src="{{image_1}}" alt="Image"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- End Of Understand Section -->
    
    <!-- Cmn About Section Begin -->

        <div class="cmn-about-sec cmn-gap pb-0">
            <div class="container">
                <div class="cmn-about-inr">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="cmn-about-left">
                                <div class="blob1"></div>
                                <div class="cmnabt-img"><img src="{{image_2}}" alt="Image"></div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="cmn-about-right">
                                <div class="cmn-about-right-inr">
                                    {{ copy_block_1 | md }}
                                </div>
                            </div>
                        </div>
                        <div class="cmn-about-inr-list">
                            {{ copy_block_list | md }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <!-- End Of Cmn About Section -->

<!-- Tech Specs Section Begin -->

<div class="tech-specs-sec cmn-gap has-texture">
    <div class="nwtexture"><img src="/img/oval-texture.png" alt="Texture"></div>
    <div class="container">
        <div class="tech-specs-inr">
            <div class="row">
                <div class="col-lg-6">
                    <div class="tech-specs-left">
                        {{ copy_block_2 | md }}
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="tech-specs-right has-texture">
                        <div class="radial-shape"><img src="/img/radial-shape.png" alt="Shape"></div>
                        <div class="tecspecs-img">
                            <img src="{{image_3}}" alt="Image">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- End Of Tech Specs Section -->

<!-- Code Compliance Section Begin -->

<div class="code-compliance-sec cmn-gap">
    <div class="container">
        <div class="code-compliance-inr">
            <div class="sec-head newhedline">
                <h2>Clean Air Code Compliance</h2>
            </div>
            <div class="codecom-cards-wrp">
                <div class="codecomp-head">Code Compliance & Code Description</div>
                <div class="codesomp-cards-row row row-cols-5">
                    {%- for item in compliance -%}
                    <div class="col">
                        <div class="codesomp-card">
                            <div class="codesomp-card-inr">
                                <h3>{{ item.code }}</h3>
                                {{ item.description | md }}
                            </div>
                        </div>
                    </div>
                    {%- endfor -%}
                </div>
            </div>
        </div>
    </div>
</div>

<!-- End Of Code Compliance Section -->

<!-- Contact Us Section Begin -->

        <div class="contact-us-sec cmn-gap contact-us-sec-2">
            <div class="container">
                <div class="contact-us-inr has-texture newtexturepos">
                    <div class="texture">
                        <img src="/img/shape-4.png" alt="Texture">
                    </div>
                    <div class="texture-2 texture">
                        <img src="/img/shape-4.png" alt="Texture">
                    </div>
                    <div class="contact-us-inr-wrp">
                        <div class="sec-inr-head">
                            <h2>{{form_intro}}</h2>
                        </div>
                        <div class="row">
                            <div class="col">
                                <div class="contact-us-right">
                                    <div id="contact-us-form" class="contact-us-right-inr">
                                        {%- set redirectUrl = '/contact-us/success/?page=solutions'  -%}
                                        {% include "partials/hubspot-form.njk" %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <!-- End Of Contact Us Section -->

<!-- Specialised Section Begin -->

<div class="specialised-sec">
    <div class="container">
        <div class="specialised-inr">
            <div class="gr-brdr"><img src="/img/gr-brdr.png" alt="Gradient Border"></div>
            <div class="row">
                <div class="specialised-left-wrp">
                    <div class="spacialised-left">
                        <div class="sec-inr-head">
                            <h2>Duroair Products for {{title}}</h2>
                        </div>
                        <p>Our products are customized to meet your exact needs and specifications ensuring both a safe and productive work environment.</p>
                    </div>
                </div>
                <div class="specialised-slider-wrp">
                    <div class="specialised-slider cmnslider">
                        {%- for p in related_products -%}
                        {%- set item = p | findByField('title', products) -%}
                        {%- if item and item.title and item.thumbnail -%}
                        <div class="specialised-slider-item">
                            <div class="specialised-item-inr">
                                <a href="/{{ item.path }}" class="specialised-img">
                                    <img src="{{ item.thumbnail }}" alt="{{ item.title }}">
                                </a>
                                <div class="specialised-card-content">
                                    <div class="spcl-card-content-inr">
                                        <h3><a href="/{{ item.path }}">{{ item.title }}</a></h3>
                                        <p>{{ item.short_description |md  }}</p>
                                    </div>
                                    <a href="/{{ item.path }}">Learn more</a>
                                </div>
                            </div>
                        </div>
                        {%- endif -%}
                        {%- endfor -%}
                    </div>
                </div>                
            </div>
        </div>
    </div>
</div>


<!-- End Of Specialised Section -->

{% endblock %}
{% block testimonial %}
{% include "partials/testimonial.njk" %}
{% endblock %}